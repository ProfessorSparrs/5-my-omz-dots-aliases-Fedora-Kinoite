## Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'


# eza-aliases
# List all files, sorted by changed-, time-changed date
alias eat='eza -la --icons --color=always  --color-scale  --group-directories-first -g -smodified'
alias e='eza --icons --color=auto  --color-scale' #--group-directories-first
alias es='eza --icons --color=always --color-scale --group-directories-first  -g'
alias ea='eza -la --icons --color=always --color-scale --group-directories-first  -g'
alias el='eza -ll  --icons --color=always --color-scale --group-directories-first  -g'

