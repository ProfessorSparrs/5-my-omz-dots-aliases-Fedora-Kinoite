# Fedora Kinoite rpm-ostree-aliases
alias sudoSUpgradeAll-Except-flatpaks-then-Exit="sudo su && rpm-ostree update && rpm-ostree upgrade -y  && exit"
alias Root4ever-upgrade="sudo su & rpm-ostree update & rpm-ostree upgrade -y"

alias ostupd='sudo rpm-ostree update'
alias ostupg='sudo rpm-ostree upgrade && flatpak upgrade -y '
alias ostin='sudo rpm-ostree install'
alias ostUn='sudo rpm-ostree uninstall'
alias ostat='rpm-ostree status'
alias ostCanc='sudo rpm-ostree --cancel'
alias ostcheck='rpm-ostree --check'

alias shutd='shutdown'
alias rebo='reboot'

alias dnfs='dnf search'
